# MongoDB Configuration
# For local development:
MONGODB_URI=mongodb://localhost:27017
# For MongoDB Atlas (recommended for production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/prescripto
# For Render deployment, use your MongoDB Atlas connection string

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Cloudinary Configuration (for image uploads)
CLOUDINARY_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_SECRET_KEY=your_cloudinary_secret_key

# Payment Gateway Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
CURRENCY=INR

# Xendit Configuration (Primary Payment Processor)
# IMPORTANT: Xendit API key must start with 'xnd_'
# Get your API key from: https://dashboard.xendit.co/settings/developers#api-keys
XENDIT_API_KEY=xnd_public_development_... # Your Xendit API key starting with xnd_
XENDIT_CALLBACK_TOKEN=your_xendit_callback_token
XENDIT_WEBHOOK_URL=https://your-domain.com/api/user/xendit-webhook
FRONTEND_URL=http://localhost:5173

# Admin Configuration
ADMIN_EMAIL=admin@prescripto.com
ADMIN_PASSWORD=admin_password_here

# Server Configuration
PORT=4000 